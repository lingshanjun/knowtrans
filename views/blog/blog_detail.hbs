{{css '/lib/highlight/solarized-light.css'}}
{{css '/lib/katex/katex.min.css'}}
{{css '/css/blog.css'}}
{{js '/lib/katex/katex.min.js'}}
{{js '/lib/highlight/highlight.pack.js'}}
{{js '/js/blog.js'}}

<div class="container">
    <p><a href="/blog">&larr; 全部博文</a></p>
    <div class="row">
        <div class="col-sm-9">
            {{#if blog}}
            <article>
                <header>
                    <h1>{{blog.title}}</h1>
                    <p>作者 &nbsp;&nbsp;
                        {{#if current_user.is_admin}}
                        <a href="/blog/edite/{{blog._id}}" class="btn btn-info btn-sm">编辑</a>
                        {{/if}}
                    </p>
                    <p>
                    {{#each blog.categories}}
                    <a href="{{slug}}" class="btn btn-xs btn-danger">{{name}}</a>
                    {{/each}}
                </p>
                </header>
                <hr>
                <div class="b-detail">
                    {{!--
                        {{#if data.post.image}}<img src="{{{cloudinaryUrl data.post.image width=750 height=450 crop='fit' }}}" class="img-responsive">{{/if}}
                    --}}
                    {{{blog.content_html}}}
                </div>
            </article>
            {{else}}
            <p>还没有文章哦~</p>
            {{/if}}
        </div>
        <div class="col-sm-3" id="myScrollspy">
            <ul id="sidernav" class="nav nav-tabs nav-stacked" data-spy="affix" data-offset-top="125">
                <li class="title"><a href="">文章目录</a></li>
            </ul>
        </div>
    </div>
</div>