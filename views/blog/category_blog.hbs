{{js '/js/blog.js'}}
<div class="container">
    <a href="" class="btn btn-info btn-sm">{{category.name}} 分类下的文章</a>
    <div class="row">
        <div class="col-sm-9">
            {{#if category.blogs}}
                {{#each category.blogs}}
            <div class="well blogArea" data-id="{{_id}}">
                <h3>{{title}}</h3>
                <p>{{brief}}</p>
                <a class="btn btn-info btn-xs" href="/blog/{{slug}}">查看更多</a>
                {{#if ../current_user.is_admin}}
                <a href="javascript:;" class="btn btn-danger btn-xs btnDeleteBlog">删除此文章</a>
                {{/if}}
            </div>
                {{/each}}
            {{else}}
            <p>还没有文章哦~</p>
            {{/if}}
        </div>
    </div>
</div>