{{js '/js/user.js'}}
<div class="container">
    <div class="row">
        <div class="col-sm-12">
            {{#if users}}
                {{#each users}}
            <div class="well userArea" data-id="{{_id}}">
                <h3>{{name}}</h3>
                <p>id: {{_id}}</p>
                <p>email: {{email}}</p>
                <p>注册时间: {{create_at}}</p>
                {{#if is_active}}
                <button class="btnActive btn btn-info btn-xs">已激活</button>
                {{else}}
                <button class="btnDeactive btn btn-danger btn-xs">未激活</button>
                {{/if}}

                <button class="btnBlock btn {{#if is_block}}btn-info{{else}}btn-danger{{/if}} btn-xs">{{#if is_block}}已锁定{{else}}未锁定{{/if}}</button>

                {{#if is_admin}}
                <button class="btnAdmin btn btn-info btn-xs">管理员</button>
                {{else}}
                <button class="btnDeadmin btn btn-danger btn-xs">非管理员</button>
                {{/if}}
            </div>
                {{/each}}
            {{else}}
            <p>还没有注册用户哦~</p>
            {{/if}}
        </div>
    </div>
</div>