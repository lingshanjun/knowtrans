<div class="row">
    <div class="col-md-12">
        <a class="btn btn-success pull-right" href="/dashboard/blog/add"><i class="glyphicon glyphicon-plus"></i> 新增文章</a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="">
            <table class="table table-striped table-bordered" id="">
                <thead>
                    <tr>
                        <th>序号</th>
                        <th>标题</th>
                        <th>所属分类</th>
                        <th>创建日期</th>
                        <th>浏览量</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each blogs}}
                    <tr>
                        <td title="{{id}}">{{id}}</td>
                        <td title="{{title}}">{{title}}</td>
                        <td>
                            {{# each categories}}
                            <a href="" class="btn btn-xs btn-info">{{name}}</a>
                            {{/each}}
                        </td>
                        <td>{{create_at_format}}</td>
                        <td>{{views}}</td>
                        <td>
                            <a href="/dashboard/blog/{{id}}">
                                <button class="btn btn-xs btn-primary">
                                    <i class="glyphicon glyphicon-pencil"></i>
                                    编辑
                                </button>
                            </a>
                            <a href="javascript:;" data-id="{{id}}" class="trArea">
                                <button class="btn btn-xs btn-danger">
                                    <i class="glyphicon glyphicon-trash"></i>
                                    删除
                                </button>
                            </a>
                            <a href="/blog/{{slug}}" target="_blank">
                                <button class="btn btn-xs btn-success">
                                    <i class="glyphicon glyphicon-eye-open"></i>
                                    前视
                                </button>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

    </div>
</div>