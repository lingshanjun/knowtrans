{{js '/dashboard/js/category.js'}}
<div class="row">
    <div class="col-md-12">
        <a class="btn btn-success pull-right" href="/dashboard/category/add"><i class="glyphicon glyphicon-plus"></i> 新增分类</a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="">
            <table class="table table-striped table-bordered" id="">
                <thead>
                    <tr>
                        <th>序号</th>
                        <th>名称</th>
                        <th>创建日期</th>
                        <th>更新日期</th>
                        <th>文章数</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each categories}}
                    <tr>
                        <td title="{{id}}">{{id}}</td>
                        <td title="{{name}}">{{name}}</td>
                        <td>{{create_at_format}}</td>
                        <td>{{update_at_format}}</td>
                        <td>{{blogs.length}}</td>
                        <td>
                            <a href="/dashboard/category/{{id}}">
                                <button class="btn btn-xs btn-primary">
                                    <i class="glyphicon glyphicon-pencil"></i>
                                    编辑
                                </button>
                            </a>
                            <a href="javascript:;" data-id="{{id}}" class="trArea">
                                <button class="btn btn-xs btn-danger btnDeleteCategory">
                                    <i class="glyphicon glyphicon-trash"></i>
                                    删除
                                </button>
                            </a>
                            <a href="" target="_blank">
                                <button class="btn btn-xs btn-success">
                                    <i class="glyphicon glyphicon-eye-open"></i>
                                    包含的文章
                                </button>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

    </div>
</div>