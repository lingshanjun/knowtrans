{{js '/dashboard/js/transarticle_edite.js'}}
<div class="row">
    <div class="col-sm-offset-3 col-sm-6">
        <form action="/dashboard/trans/article/{{article.id}}" method="post" id="transarticleEditeForm">
          <div class="form-group">
            <label for="title">标题</label>
            <input type="text" class="form-control" name="title" value="{{article.title}}">
          </div>
          <div class="form-group">
            <label for="slug">slug</label>
            <input type="text" class="form-control" name="slug" value="{{article.slug}}" placeholder="只允许字母、数字和'-'">
          </div>
          <div class="form-group">
            <label for="book">所属的book</label>
            <button type="button" class="btn btn-info btn-xs pull-right" id="btnAddBook"><i class="fa fa-plus"></i> 新建book</button>
            <select class="form-control" name="book" data-book="{{article.book.id}}" id="bookSelect">
              <option value="">--请选择--</option>
            </select>
          </div>
          <div class="form-group">
            <label for="order">排序</label>
            <input type="text" class="form-control" name="order" value="{{article.order}}">
          </div>
          <div class="form-group">
            <div class="form-group">
                <label for="is_locked">是否锁定翻译</label>&nbsp;&nbsp;
                  <input type="radio" name="is_locked" autocomplete="off" value="true" {{#ifeq article.is_locked true}} checked {{/ifeq}}> 锁定&nbsp;&nbsp;
                  <input type="radio" name="is_locked" autocomplete="off" value="false" {{#ifeq article.is_locked false}} checked {{/ifeq}}> 解禁
              </div>
          </div>
          <button type="submit" class="btn btn-info pull-right">保存</button>
        </form>
    </div>
</div>

<div class="modal fade" id="modalAddBook" tabindex="-1" role="dialog" aria-labelledby="modalAddBookLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="modalAddBookLabel">新建book</h4>
      </div>
      <div class="modal-body">
        <form id="formAddBook" action="/dashboard/trans/book/add">
          <div class="form-group">
            <label for="name">book名称</label>
            <input type="text" class="form-control" name="name">
          </div>
          <div class="form-group">
            <label for="slug">slug</label>
            <input type="text" class="form-control" name="slug" placeholder="只允许字母、数字和'-'">
          </div>
          <div class="form-group">
            <label for="version">版本</label>
            <input type="text" class="form-control" name="version">
          </div>
          <div class="form-group">
            <label for="brief">简介</label>
            <textarea name="brief" rows="3" class="form-control"></textarea>
          </div>
          <br>
        </form>
        <div class="alert alert-danger alert-dismissible" role="alert" style="display: none;"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
        <button type="button" class="btn btn-primary" id="btnAddBookForm">确定</button>
      </div>
    </div>
  </div>
</div>