{{js '/dashboard/js/transarticle_edite.js'}}
<div class="row">
    <div class="col-sm-offset-3 col-sm-6">
        <form action="/dashboard/trans/article/{{article.id}}" method="post" id="transarticleEditeForm">
          <div class="form-group">
            <label for="title">标题</label>
            <input type="text" class="form-control" name="title" value="{{article.title}}">
          </div>
          <div class="form-group">
            <label for="slug">slug</label>
            <input type="text" class="form-control" name="slug" value="{{article.slug}}" placeholder="只允许字母、数字和'-'">
          </div>
          <div class="form-group">
            <label for="book">所属的book</label>
            <select class="form-control" name="book" data-book="{{article.book.id}}" id="bookSelect">
              <option value="">--请选择--</option>
            </select>
            <button type="button" class="btn btn-info btn-xs pull-right" id="btnAddBook"><i class="fa fa-plus"></i> 新建book</button>
          </div>
          <div class="form-group">
            <label for="order">排序</label>
            <input type="text" class="form-control" name="order" value="{{article.order}}">
          </div>
          <div class="form-group">
            <div class="form-group">
                <label for="is_locked">是否锁定翻译</label>&nbsp;&nbsp;
                  <input type="radio" name="is_locked" autocomplete="off" value="true" {{#ifeq article.is_locked true}} checked {{/ifeq}}> 锁定&nbsp;&nbsp;
                  <input type="radio" name="is_locked" autocomplete="off" value="false" {{#ifeq article.is_locked false}} checked {{/ifeq}}> 解禁
              </div>
          </div>
          <button type="submit" class="btn btn-info pull-right">保存</button>
        </form>
    </div>
</div>