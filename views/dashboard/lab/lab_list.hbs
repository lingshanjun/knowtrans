{{js '/dashboard/js/lab.js'}}
<div class="row">
    <div class="col-md-12">
        <a class="btn btn-success pull-right" href="/dashboard/lab/add"><i class="glyphicon glyphicon-plus"></i> 新增lab</a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="">
            <table class="table table-striped table-bordered" id="">
                <thead>
                    <tr>
                        <th>序号</th>
                        <th>名称</th>
                        <th>slug</th>
                        <th>创建日期</th>
                        <th>版本号</th>
                        <th>简介</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each labs}}
                    <tr>
                        <td title="{{id}}">{{id}}</td>
                        <td title="{{name}}">{{name}}</td>
                        <td title="{{slug}}">{{slug}}</td>
                        <td>{{create_at_format}}</td>
                        <td>{{version}}</td>
                        <td>{{brief}}</td>
                        <td>
                            <a href="/dashboard/lab/{{id}}">
                                <button class="btn btn-xs btn-primary">
                                    <i class="glyphicon glyphicon-pencil"></i>
                                    编辑
                                </button>
                            </a>
                            <a href="javascript:;" data-id="{{id}}" class="trArea">
                                <button class="btn btn-xs btn-danger btnDeleteLab">
                                    <i class="glyphicon glyphicon-trash"></i>
                                    删除
                                </button>
                            </a>
                            {{#if demo_link}}
                            <a href="{{demo_link}}" target="_blank">
                                <button class="btn btn-xs btn-info">
                                    <i class="glyphicon glyphicon-eye-open"></i>
                                    demo
                                </button>
                            </a>
                            {{/if}}
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

    </div>
</div>