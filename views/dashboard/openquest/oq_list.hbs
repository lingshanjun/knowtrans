{{js '/dashboard/js/openquest.js'}}
<div class="row">
    <div class="col-lg-12">
        <div class="">
            <table class="table table-striped table-bordered" id="">
                <thead>
                    <tr>
                        <!-- <th>序号</th> -->
                        <th>名称</th>
                        <th>创建时间</th>
                        <th>更新时间</th>
                        <th>简介</th>
                        <th>repo_id</th>
                        <th>url</th>
                        <th>commit_id</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each repos}}
                    <tr>
                        <!-- <td title="{{id}}">{{id}}</td> -->
                        <td title="{{name}}">{{repo_name}}</td>
                        <td>{{create_at_format}}</td>
                        <td>{{update_at_format}}</td>
                        <td>{{repo_description}}</td>
                        <td>{{repo_id}}</td>
                        <td>{{repo_url}}</td>
                        <td>{{ truncate head_commit_id 10}}</td>
                        <td>
                            <a href="javascript:;" data-id="{{id}}" class="trArea">
                                <button class="btn btn-xs btn-danger btnDeleteLab">
                                    <i class="glyphicon glyphicon-trash"></i>
                                    删除
                                </button>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

    </div>
</div>