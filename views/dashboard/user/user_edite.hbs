{{js '/dashboard/js/user.js'}}
<div class="row">
    <div class="col-sm-offset-3 col-sm-6">
        <form action="/dashboard/user/{{user.id}}" method="post" id="userEditeForm">
          <div class="form-group">
            <label for="name">昵称</label>
            <input type="text" class="form-control" name="name" placeholder="昵称（至少6个字符）" value="{{user.name}}">
          </div>
          <div class="form-group">
            <label for="email">邮箱</label>
            <input type="email" class="form-control" name="email" placeholder="邮箱" value="{{user.email}}">
          </div>
          <div class="form-group">
            <label for="is_admin">是否管理员</label>&nbsp;&nbsp;
              <input type="radio" name="is_admin" autocomplete="off" value="false" {{#ifeq user.is_admin false }} checked {{/ifeq}}> 否 &nbsp;&nbsp;
              <input type="radio" name="is_admin" autocomplete="off" value="true" {{#ifeq user.is_admin true}} checked {{/ifeq}}> 是
          </div>
          <div class="form-group">
            <label for="is_active">是否已激活</label>&nbsp;&nbsp;
              <input type="radio" name="is_active" autocomplete="off" value="false" {{#ifeq user.is_active false }} checked {{/ifeq}}> 否 &nbsp;&nbsp;
              <input type="radio" name="is_active" autocomplete="off" value="true" {{#ifeq user.is_active true}} checked {{/ifeq}}> 是
          </div>
          <div class="form-group">
            <label for="is_block">是否管理员</label>&nbsp;&nbsp;
              <input type="radio" name="is_block" autocomplete="off" value="false" {{#ifeq user.is_block false }} checked {{/ifeq}}> 否 &nbsp;&nbsp;
              <input type="radio" name="is_block" autocomplete="off" value="true" {{#ifeq user.is_block true}} checked {{/ifeq}}> 是
          </div>
          <button type="submit" class="btn btn-info">提交</button>
        </form>
    </div>
</div>